<h1>All Articles</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    
    <tbody>
        <% @articles.each do |article3| %>
            <tr>
                <td><%= article3.title %></td>
                <td><%= article3.description %></td>
                <td><%= link_to "View", article_path(article3) %></td>
                <td><%= link_to "Edit", edit_article_path(article3) %></td>
                <td><%= link_to "Delete", article_path(article3), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

