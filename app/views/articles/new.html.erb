<h1>Create a New Article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |thing| %>
    <p>
        <%= thing.label :title %></br>
        <%= thing.text_field :title %>
    </p>
    <p>
        <%= thing.label :description %></br>
        <%= thing.text_area :description %>
    </p>
    <p>
        <%= thing.submit %>
    </p>

  <% end %>

