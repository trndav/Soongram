<div class="container" id="main-form">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors", obj: @article %>
            <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-light rounded", local: true) do |thing| %>

            <!--or will work if in articles-controller use only render "new" --!>
            <!-- form_with scope: :article, url: articles_path, data: { turbo: false }, local: true do |f| --!>

                <div class="form-group row">    
                    <%= thing.label :title, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= thing.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= thing.label :description, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= thing.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Start typing description.." %>
                    </div>
                </div>            
                <div class="container text-center" id="form-button">
                    <%= thing.submit class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
        <div class="container text-center">
            <%= link_to "Cancel and return to Articles", articles_path %>
        </div>
    </div>
</div>