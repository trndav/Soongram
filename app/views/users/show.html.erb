<h1 class="text-success", id="article-h1"><%= @user.username %> profile</h1>
<%= gravatar_for @user, size: 200 %>

<div class="text-center", id="article-h1">
  <% if logged_in? && @user == current_user %>
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  <% end %>
</div>

<h3 class="text-success", id="article-h1">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render "articles/article" %>

<div class="flickr_pagination mb-5">
  <%= will_paginate @articles, :container => false %>
</div>