<div class="container" id="main-form">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors", obj: @user %>
            <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-light rounded", local: true) do |thing| %>

            <!--or will work if in articles-controller use only render "new" --!>
            <!-- form_with scope: :article, url: articles_path, data: { turbo: false }, local: true do |f| --!>

                <div class="form-group row">    
                    <%= thing.label :username, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= thing.text_field :username, class: "form-control shadow rounded", placeholder: "Type username here" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= thing.label :email, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= thing.email_field :email, class: "form-control shadow rounded", placeholder: "Type your email" %>
                    </div>
                </div>    
                
                <div class="form-group row">
                    <%= thing.label :password, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= thing.password_field :password, class: "form-control shadow rounded", placeholder: "Type password" %>
                    </div>
                </div>    

                <div class="container text-center" id="form-button">
                    <%= thing.submit class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
        <div class="container text-center">
            <%= link_to "Cancel and return to Articles", articles_path %>
        </div>
    </div>
</div>