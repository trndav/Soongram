<%= render "shared/errors", obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-5 bg-light rounded", local: true) do |thing| %>

    <div class="form-group row">    
        <%= thing.label :name, "Category name", class: "col-2 col-form-label" %>
        <div class="col-10">
            <%= thing.text_field :name, class: "form-control shadow rounded", placeholder: "Type name here" %>
        </div>
    </div>               

    <div class="container text-center" id="form-button">
        <%= thing.submit class: "btn btn-success" %>
    </div>
<% end %>