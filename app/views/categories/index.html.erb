<h1 class="text-success", id="article-h1">Categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container" id:"articles-margin">
    <% @categories.each do |category| %>
        <div class="row justify-content-md-center">
            <div class="col-4  mt-3">
                <div class="card text-center shadow mb-2 bg-white rounded">                    
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
                        <div class="card-text" style="text-align: center;"><%= pluralize(category.articles.count, "article") %></div> 
                    </div>      
                    <div class="card-footer text-muted">
                        <small>Created <%= time_ago_in_words(category.created_at) %> ago, 
                        updated <%= time_ago_in_words(category.updated_at) %> ago.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>